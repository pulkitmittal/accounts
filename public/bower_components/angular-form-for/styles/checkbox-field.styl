@require '_variables';

checkbox-field {
  display: block;
}

.checkbox-field-input {
  vertical-align: middle;
  display: inline-block;
  height: 20px;
  width: 20px;
  background-image: linear-gradient(to top, $color-fill-1, white);
  border-radius: 4px;
  border: $border;
  position: relative;
  margin-right: $padding-small;
  cursor: inherit;
  vertical-align: middle;

  &.is-checked {
    &::before {
      content: "\f00c";
      font-family: FontAwesome;
      display: inline-block;
      position: absolute;
      top: 0;
      left: 0;
      width: 19px;
      line-height: 18px;
      text-align: center;
      color: $color-text-1;
      margin-top: 1px;
      margin-left: 1px;
    }
  }
}

.checkbox-field {
  cursor: pointer;

  .field-label {
    vertical-align: middle;
  }

  label {
    cursor: inherit;
  }

  &.disabled {
    cursor: default;

    .checkbox-field-input {
      opacity: $opacity-disabled;
    }
  }

  .field-input {
    display: none;
  }

  &.has-error {
    .checkbox-field-input {
      border-color: $border-color-error;
    }
  }
}
